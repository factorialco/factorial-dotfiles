[branch "master"]
  remote = origin
  merge = refs/heads/master

[color]
  ui = true

[core]
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX

[alias]
  st = status
  ci = commit
  co = checkout

[merge]
  tool = vimdiff

[push]
  default = current

[grep]
  lineNumber = true
  extendRegexp = true

[rebase]
  autosquash = true
  autostash = true

[branch]
  autosetuprebase = always

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[color "diff"]
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[diff-so-fancy]
  markEmptyLines = false
